<h1>トップページ</h1>
<%= link_to '投稿する','/posts/new'%>
<% @post.each do |post| %>
<!--@postはposts_controller.rbの@postのこと、全データをeachで処理する-->
  <div class="post">
    <div class="post_date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post_content">
      <%= post.content %>
    </div>
  </div>
<% end %>

